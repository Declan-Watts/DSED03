<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff4db6ac">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <TextView
                android:text="@string/profileWelcomeMessage"
                android:id="@+id/profileWelcomeMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ff000000" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <TextView
                android:text="@string/profileWinsHeader"
                android:id="@+id/profileWinsHeader"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ff000000" />
            <TextView
                android:text="@string/profileLossesHeader"
                android:id="@+id/profileLossesHeader"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ff000000" />
            <TextView
                android:text="@string/profileScoreHeader"
                android:id="@+id/profileScoreHeader"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ff000000" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <TextView
                android:text="@string/profileWins"
                android:id="@+id/profileWins"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ff000000" />
            <TextView
                android:text="@string/profileLosses"
                android:id="@+id/profileLosses"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ff000000" />
            <TextView
                android:text="@string/profileScore"
                android:id="@+id/profileScore"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ff000000" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <TextView
                android:text="@string/leaderboardWelcoimeMessage"
                android:id="@+id/leaderboardWelcoimeMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ff000000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="3dp">
            <TextView
                android:text="@string/leaderboardNameColumn"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:layout_marginRight="0.0dp" />
            <TextView
                android:text="@string/leaderboardWinsColumn"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textColor="#ff000000" />
            <TextView
                android:text="@string/leaderboardLossesColumn"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:layout_marginRight="0.0dp" />
            <TextView
                android:text="@string/leaderboardScoreColumn"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:textColor="#ff000000" />
        </LinearLayout>
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/leaderboardList" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
            >
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigationLeaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/navigation" />
    </LinearLayout>
</RelativeLayout>