<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff4db6ac">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <TextView
                android:text="@string/hangmanWelcomeMessage"
                android:id="@+id/hangmanWelcomeMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ff000000" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <TextView
                android:text="@string/hangmanMessage"
                android:id="@+id/hangmanMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ff000000" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <TextView
                android:text="@string/word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtWord"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#ff000000"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="3dp">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_width="360px"
                android:layout_height="480px"
                android:contentDescription="Assets"
                android:id="@+id/hangmanImg"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtWinLose"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#ff000000"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
            >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:textAlignment="textStart">
            <Button
                android:text="@string/q"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyQ"
                android:tag="Q"
                android:layout_gravity="center_horizontal"
            />
            <Button
                android:text="@string/w"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyW"
                android:tag="W"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/e"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyE"
                android:tag="E"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/r"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyR"
                android:tag="R"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/t"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyT"
                android:tag="T"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/y"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyY"
                android:tag="Y"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/u"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyU"
                android:tag="U"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/i"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyI"
                android:tag="I"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/o"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyO"
                android:tag="O"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/p"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyP"
                android:tag="P"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp">
            <Button
                android:text="@string/a"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyA"
                android:tag="A"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/s"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyS"
                android:tag="S"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/d"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyD"
                android:tag="D"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/f"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyF"
                android:tag="F"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/g"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyG"
                android:tag="G"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/h"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyH"
                android:tag="H"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/j"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyJ"
                android:tag="J"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/k"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyK"
                android:tag="K"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:text="@string/l"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyL"
                android:tag="L"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp">
            <Button
                android:text="@string/z"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyZ"
                android:tag="Z"
                 
                />
            <Button
                android:text="@string/x"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyX"
                android:tag="X"
                 
                />
            <Button
                android:text="@string/c"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyC"
                android:tag="C"
                 
                />
            <Button
                android:text="@string/v"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyV"
                android:tag="V"
                 
                />
            <Button
                android:text="@string/b"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyB"
                android:tag="B"
                 
                />
            <Button
                android:text="@string/n"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyN"
                android:tag="N"
                 
                />
            <Button
                android:text="@string/m"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/keyM"
                android:tag="M"
                 
                />
        </LinearLayout>
        <Button
            android:text="@string/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/btnReset" />
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/navigation" />
    </LinearLayout>
</RelativeLayout>